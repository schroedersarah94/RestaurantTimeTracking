<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"] - TimeTrackingApp</title>

    <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css">

</head>
<body>
    <div>
        <!-- Side Navigation - will display user info, current hours, links to different pages, etc -->
        <div data-role="navview" class="navview compact-lg expanded-xl">
            <div class="navview-pane">
                <ul class="navview-menu">
                    <li>
                        <a href="#">
                            <span class="mif-apps icon"></span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")">
                            <span class="mif-alarm icon"></span>
                            <span class="title">ABOUT PAGE LINK TEST</span>
                        </a>
                        <button class="button">Log Out</button>
                    </li>
                </ul>
            </div>

            <div class="navview-content page-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <style>
        .navview-content {
            height: 100vh !important;
        }
        .navview-menu {
            
        }

        /* Shared page styles */
        .page-container {
            padding: 5vh 2vh;
        }
        .page-title {
            font-size: 5vw;
            text-align: center;
        }
        .section-title {
            font-size: 2vw;
        }
        .section-container {
            background-color: #ebebeb;
            border: 1px solid #dedede;
            padding: 10px;
            margin: 2vh 0px;
        }
    </style>

    <script src="https://cdn.metroui.org.ua/v4/js/metro.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>


</body>
</html>
